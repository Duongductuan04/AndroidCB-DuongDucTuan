<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtA"
        android:layout_width="339dp"
        android:layout_height="0dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Nhập A"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtB"
        android:layout_width="338dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Nhập B"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtA" />

    <TextView
        android:id="@+id/txtV"
        android:layout_width="328dp"
        android:layout_height="47dp"
        android:layout_marginTop="32dp"
        android:hint="Kết Quả"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtB" />

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtV">

        <Button
            android:id="@+id/btnTong"
            android:layout_width="62dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:text="+" />

        <Button
            android:id="@+id/btnHieu"
            android:layout_width="62dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:text="-" />

        <Button
            android:id="@+id/btnTich"
            android:layout_width="62dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:text="*" />

        <Button
            android:id="@+id/btnThuong"
            android:layout_width="62dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:text="/" />

        <Button
            android:id="@+id/btnDu"
            android:layout_width="62dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:text="%" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>